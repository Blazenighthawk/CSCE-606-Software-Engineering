<% if @total ==0  %>>
<p> No movies...</p>
<%else %>>

<p> Number of items found : <b><%=@total %></b> </p>

<p>
<% if @items_page.page_count:>1 %>
page &nbsp;:
<%=pagation_links_remote@items_page %>
<%end %>>

</p>

<table>
   <thead>
   <tr>
   <td <% =sort_td_class_helper "title" %>>
   <% =sort_link helper "ordered_title","ordered_title" %>
   </td>
   <td <% =sort_td_class_helper "release_date" %>>
   <% =sort_link helper "ordered_release","ordered_release" %>
   </td>
   </tr>
   </thead>
   <tbody>
   <%@items.each do |i| %>
   <tr class=  "<%=cycle ("even","odd") %>">
   <td><% =i.title %><td>
   <td> <% =i.release_date %></td>
   </tr>
   <% end %>>
   </tbody>
</table>
<%end %>>

